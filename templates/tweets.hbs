<div class="col-md-10">
  <h1>Tweet Feed</h1>
  {{#each controller}}
    <h3 {{action 'expandTweet'}}>{{text}}</h3>

    {{#if isExpanded}}
      {{date}}

      {{#each item}}
        <p>{{tweetReply}}</p>
      {{/each}}

      <form>
        <div class="form-group">
          <label for="reply">Reply to Tweet</label>
          {{input id="reply" class="form-control" maxlength="141" value=tweetReply}}
        </div>
          <button class="btn btn-primary">Reply</button>

      </form>

    {{/if}}
  {{/each}}

  <h2>New Tweet</h2>
  <form>
    <div class="form-group">
      <label for="tweet">Tweet</label>
      {{input id="tweet" class="form-control" maxlength="141" value=newTweet}}
    </div>
    <button class="btn btn-primary" {{action 'createTweet'}}>Save</button>
  </form>
</div>
